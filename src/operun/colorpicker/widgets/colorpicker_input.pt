<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag="">

<tal:bootstrap tal:condition="view/loadbootstrap">
  <link rel="stylesheet" href="++resource++operun.colorpicker/bootstrap.css" />
</tal:bootstrap>

<!-- Form -->
<div id="cp2" class="input-group colorpicker-component">
  <input tal:attributes="id string:${view/id};
                         name view/name;
                         value view/value;
                         title view/title;
                         lang view/lang;
                         alt view/alt;
                         accesskey view/accesskey;
                         onselect view/onselect;
                         size view/size;
                         maxlength view/maxlength" type="text" class="form-control" />
  <span class="input-group-addon"><i></i></span>
</div>

</html>
